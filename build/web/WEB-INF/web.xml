<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AuthenFilter</filter-name>
        <filter-class>filter.AuthenFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthorFilter</filter-name>
        <filter-class>filter.AuthorFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>AuthenFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/staff/*</url-pattern>
        <url-pattern>/student/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthorFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/staff/*</url-pattern>
        <url-pattern>/student/*</url-pattern>
    </filter-mapping>
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatusServlet</servlet-name>
        <servlet-class>controller.StatusServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModifyRoleServlet</servlet-name>
        <servlet-class>controller.ModifyRoleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookSearchServlet</servlet-name>
        <servlet-class>controller.BookSearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookRemoveServlet</servlet-name>
        <servlet-class>controller.BookRemoveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookAddServlet</servlet-name>
        <servlet-class>controller.BookAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RenewBookServlet</servlet-name>
        <servlet-class>controller.RenewBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookReserveServlet</servlet-name>
        <servlet-class>controller.BookReserveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>controller.ProfileServlet</servlet-class>
    </servlet>
     
    
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatusServlet</servlet-name>
        <url-pattern>/StatusServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifyRoleServlet</servlet-name>
        <url-pattern>/ModifyRoleServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookSearchServlet</servlet-name>
        <url-pattern>/BookSearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookRemoveServlet</servlet-name>
        <url-pattern>/BookRemoveServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookAddServlet</servlet-name>
        <url-pattern>/BookAddServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RenewBookServlet</servlet-name>
        <url-pattern>/RenewBookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookReserveServlet</servlet-name>
        <url-pattern>/BookReserveServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/ProfileServlet</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            1800
        </session-timeout>
    </session-config>
</web-app>
